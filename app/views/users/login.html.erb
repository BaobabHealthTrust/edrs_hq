<style>
  .mobile h1{
      padding: 3px !important;margin: 0px;
      color: darkred !important;
      font-size: 18px !important;
  }
  .mobile{

  }
  input{
      color: darkslategray !important;
      font-size: 1.3em !important;
      padding: 4px !important;
      box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
  }
</style>
<div class="container" style="margin-top: 3%; background: #f8f8ff">
  <div class="row" style="border: 1px solid #d3d3d3; padding: 20px;
          box-shadow:  0 6px 10px 0 rgba(0, 0, 0, 0.19);border-radius: 0px;">
    <div class="login pull-left">
      <div class="mobile" style="padding: 10px;">
        <h1>Electronic </h1><h1> Registration</h1><h1> Of Death Records</h1><h1> In Malawi</h1>
      </div>
    </div>
    <div class="register pull-right">
      <div class="header">
        <h1>Sign In</h1>
        <span>Access your account.</span>
      </div>

      <%= form_for "users" do |f| %>

          <div class="form-group clearfix">
            <%= f.label :username %>
            <%= f.text_field :username %>
          </div>

          <div class="form-group clearfix">
            <%= f.label :password %>
            <%= f.password_field :password, autocomplete: "off" %>
          </div>

          <div class="actions">
            <%= f.submit "Log In", class: "btn btn-default btn-orange pull-right" %>
          </div>

      <% end %>

    </div>
  </div>
</div>