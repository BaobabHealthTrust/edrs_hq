<style type="text/css">
    #cases th, #cases td {
        width: 7% !important;
        text-align: center;
    }

    #cases th {
    	background: #6281a7;
    	color:#ffffff;
    }
</style>
<div id="main" >
	<table class="table table-striped table-advance table-hover" id="cases">
		<thead>
			<tr>
				<th>#</th>
				<th>Name</th>
				<th>No. of records Sampled</th>
				<th>No. of records Reviewed</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			<% @i = 1 %>
			<% @sample_details.each do |details| %>
				<tr>
						<td><%= @i%></td>
						<td><%= details[:name] %></td>
						<td><%= details[:sample].count %></td>
						<td><%= details[:reviewed].count %></td>
						<td>
							<% if details[:sample].count == details[:reviewed].count %>
								<button class="btn disabled">Review</button>

							<%else%>
								<button class="btn btn-success" onclick="window.location='/review/<%=details[:sample_id]%>?index=0'">Review</button>
							<%end%>
						</td>
				</tr>
				<% @i = @i + 1 %>
			<%end%>
		</tbody>
	</table>
	
</div>
<div class="table-container-footer" style="padding: 0px;margin-bottom: 0px;margin-top: 5px;">
	<button class="btn btn-danger" onclick="window.location='/'">Back</button>
</div>
<script type="text/javascript">
	  try {  
	    dataTable = $('#cases').dataTable({
	                  "pageLength": 7,
	                  "autoWidth": true,
	                  "lengthChange": true,
	                  "order": [[ 1, "asc" ]]
	                });
	  }catch(e){
	    console.log(e);
	  }

</script>