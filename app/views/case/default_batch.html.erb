<script>

function initDataTable(){        
  try {  
    dataTable = $('#cases').dataTable();
  }catch(e){
    alert(e);
  }

  var cases = [];
  var h = {}

  <% (@cases || []).each do |cas|
        keys = cas.keys
        keys.each do |k|
          v = cas[k] %>
          h['<%= k %>'] = '<%= v%>';
        <%end%>

        cases.push(h);
        h = {};
  <%end%>

  if (cases && cases.length > 0){
    addRows(cases, true);
  }
  getCases();
}

setTimeout(initDataTable(), 2000);
</script>
